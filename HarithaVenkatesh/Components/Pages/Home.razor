@page "/"
@using HarithaVenkatesh.Components.Wrappers
@inject IConfiguration Configuration

<PageTitle>Home</PageTitle>

@if (IsLoading)
{
    <SkeletonWrapper SkeletonHeight="120px" />
    <SkeletonWrapper SkeletonHeight="500px" />
    <SkeletonWrapper SkeletonHeight="100px" />
    <SkeletonWrapper LayoutType="1" Styles="margin-left:25px" />
    <SkeletonWrapper LayoutType="1" Styles="margin-left:25px" />
    <SkeletonWrapper LayoutType="1" Styles="margin-left:25px" />
    <HeaderWrapper HeaderText="Venkatesh &amp; Haritha" />
}
else
{
    <HeaderWrapper HeaderText="Venkatesh &amp; Haritha" />
    <CarouselWrapper desktopImage_1="images/desktopimg_1.jpg" tabletImage_1="images/desktopimg_1.jpg" />
    <MudPaper Elevation="4" Class="pa-6 mud-width-full d-flex justify-center align-center"
              Style="
                    background: linear-gradient(90deg, #fff0f5, #fce4ec);
                    border-left: 6px solid #e91e63;
                    border-radius: 16px;
                  ">
        <MudText Typo="Typo.h6" Color="Color.Secondary" Align="Align.Center">
            💍 Below you can watch the live video of the wedding ceremony 💕
        </MudText>
    </MudPaper>
    <VideoWrapper Title="VenkatesHarithaWedding" VideoLink="@Configuration.GetSection("youtubelink").Value" />

    <SnackbarWrapper ImagePath="images/Wedding_SnackBar.png" message="Welcome! We're glad you're here."></SnackbarWrapper>

    <TimelineWrapper />
}

@code {
    private bool IsLoading { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(2000);
        IsLoading = false;
    }
}